</span>

<script type="text/javascript">
$(function() {
    function m(n, d) {
        P = Math.pow;
        R = Math.round;
        d = P(10, d);
        i = 7;
        while(i) {
            (s = P(10, i-- * 3)) <= n && (n = R(n * d / s) / d + "KMGTPE"[i])
        }
        return n;
    }

    $.ajax({
        url: 'http://api.twitter.com/1/users/show.json',
        data: {
            screen_name: 'Midosphere'
        },
        dataType: 'jsonp',
        success: function(data) {
           count = data.followers_count;
           if(count === 0 or count == ""){
               count = 0;
           }
           $('#followers').html(m(count, 1));
        }
    });
});
</script>

