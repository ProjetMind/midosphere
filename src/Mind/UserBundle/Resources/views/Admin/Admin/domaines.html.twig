{# empty Twig template #}

{% extends "MindUserBundle:Admin:admin.html.twig" %}


{% block admin_contenu %}

{% if app.session.hasFlash('domaine-enregistre') %} 
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        {{ app.session.flash('domaine-enregistre') }}
        
        {% if app.session.hasFlash('domaine-publie-ou-pas') %}
        <div class="alert alert-message">{{ app.session.flash('domaine-publie-ou-pas') }}</div>
        {% endif %}
        
    </div>
{% endif %}

<div id="messageAlert">
    
</div>

<span class="row-fluid">
    <!-- Button to trigger modal -->
    <h3>Les domaines<a href="#modalAddDomaine" role="button" data-toggle="modal" class="btn btn-link">Ajouter un domaine</a></h3>
    <div>
        <div class="alert alert-warning">
            <ul>
                <li>Attention, la suppression d'un domaine est irréversible.</li>
                <li>Pour modifier le libéllé d'un domaine, il suffit de cliquer sur le libellé, entrer la nouveau libellé et valider ou annuler.</li>
            </ul>
        </div>
        {#{ htmlToDeleteDomaine|raw }#}
    </div>
</span>

<div>
    {{ listeDomaines|raw }}
</div>

{% render controller('MindUserBundle:Domaine:domaines') %}

{% endblock admin_contenu %}

